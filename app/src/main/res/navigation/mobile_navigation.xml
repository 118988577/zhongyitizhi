<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_health">
//改文件声明了3个fragment，，ID表示ID，name表示包名和类名，label表示标题栏显示文字，layout表明该fragment要用什么布局
    <fragment
        android:id="@+id/navigation_health"
        android:name="com.example.zhongyitizhi1.ui.health.HealthFragment"
        android:label="@string/title_health"
        tools:layout="@layout/fragment_health" >
        <action
            android:id="@+id/action_navigation_health_to_navigation_me"
            app:destination="@id/navigation_me" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.zhongyitizhi1.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_health"
            app:destination="@id/navigation_health" />
    </fragment>

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.zhongyitizhi1.ui.me.MeFragment"
        android:label="@string/title_me"
        tools:layout="@layout/fragment_me" >
        <action
            android:id="@+id/action_navigation_me_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>
</navigation>